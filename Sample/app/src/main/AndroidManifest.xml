<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.touchtalent.bobblesdk.sample">

    <application
        android:name="com.touchtalent.bobblesdk.sample.NextKeyboardApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NextKeyboardSample"
        tools:ignore="AllowBackup">
        <service
            android:name="com.touchtalent.bobblesdk.sample.service.NextKeyboard"
            android:directBootAware="true"
            android:label="Next Keyboard"
            android:permission="android.permission.BIND_INPUT_METHOD"
            tools:targetApi="n">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/bobble_ime" />
        </service>
    </application>

</manifest>